<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeListLayoutActivity" >

    <LinearLayout
        android:id="@+id/articleLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_avatar_image"
            android:layout_width="80dip"
            android:layout_height="80dp"
            android:contentDescription="UserImage" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_hobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_username"
        android:layout_below="@+id/list_username"
        android:text="Hobbies"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/list_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/articleLinear"
        android:layout_toRightOf="@+id/articleLinear"
        android:text="UserName"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/list_detail_hobbies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_hobbies"
        android:layout_below="@+id/list_hobbies"
        android:layout_marginLeft="43dp"
        android:text="(detail of hobbies)"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/list_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/list_username"
        android:layout_marginRight="21dp"
        android:background = "#00A9FF"
        android:text="More" />

</RelativeLayout>