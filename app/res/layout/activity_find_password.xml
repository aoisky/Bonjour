<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FindPasswordActivity" >

    <TextView
        android:id="@+id/find_pass_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Please Enter your email address:" />

    <ImageView
        android:id="@+id/find_passimageViewLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignRight="@+id/find_pass_email"
        android:layout_below="@+id/find_pass_confirm_pass"
        android:layout_marginTop="60dp"
        android:contentDescription="Bonjour Icon"
        android:src="@drawable/bonjour_icon" />

    <EditText
        android:id="@+id/find_pass_enter_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_pass_email"
        android:layout_alignRight="@+id/find_pass_email"
        android:layout_below="@+id/find_pass_email"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/find_pass_confirm_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/find_pass_enter_email"
        android:layout_marginRight="30dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/aritcle_btns"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

</RelativeLayout>